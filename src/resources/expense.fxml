<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="contentArea" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controller">
    <children>
        <ImageView fitHeight="600.0" fitWidth="713.0" opacity="0.64" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/sunset.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="Comment" layoutX="24.0" layoutY="526.0" promptText="Comment" style="-fx-pref-width: 320;" styleClass="data_field">
            <font>
                <Font name="SansSerif Regular" size="14.0" />
            </font></TextField>
        <TextField fx:id="Amount" layoutX="360.0" layoutY="526.0" promptText="Amount" style="-fx-pref-width: 100;" styleClass="data_field">
            <font>
                <Font name="SansSerif Regular" size="14.0" />
            </font></TextField>
        <Button fx:id="Submit" alignment="CENTER" graphicTextGap="0.0" layoutX="568.0" layoutY="526.0" mnemonicParsing="false" style="-fx-border-radius: 10px;" stylesheets="@Style.css">
            <styleClass>
                <String fx:value="data_field" />
                <String fx:value="submit_button" />
            </styleClass>
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icons/done.png" />
                    </image>
                    <styleClass>
                        <String fx:value="data_field" />
                        <String fx:value="submit_button" />
                    </styleClass>
                </ImageView>
            </graphic></Button>
        <ChoiceBox fx:id="TagName" accessibleHelp="Tag" accessibleText="Tag" layoutX="474.0" layoutY="526.0" prefHeight="25.0" prefWidth="116.0" style="-fx-pref-width: 80;">
            <styleClass>
                <String fx:value="data_field" />
                <String fx:value="combo-box" />
            </styleClass></ChoiceBox>
        <Text fill="WHITE" layoutX="25.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Expense">
            <font>
                <Font name="SansSerif Bold" size="24.0" />
            </font>
        </Text>
        <ChoiceBox fx:id="Budget" layoutX="24.0" layoutY="87.0" prefHeight="25.0" prefWidth="116.0" style="-fx-pref-width: 210;">
            <styleClass>
                <String fx:value="data_field" />
                <String fx:value="combo-box" />
            </styleClass></ChoiceBox>
        <DatePicker layoutX="24.0" layoutY="149.0" style="-fx-pref-width: 150;">
            <styleClass>
                <String fx:value="data_field" />
                <String fx:value="date-picker" />
                <String fx:value="combo-box" />
            </styleClass>
        </DatePicker>
    </children>
</AnchorPane>
